<div>
  @if(title.toLowerCase() !== 'root')
    <h3 class="text-gray-900 text-xl font-semibold"> {{ title }} </h3>
  @end

  <div class="mb-8">
    <ul class="pt-2">
      @each(link in links)
        <li>
          <a
            href="{{ link.url }}"
            up-preload
            up-focus="false"
            up-target="[layout-main]"
            class="block px-4 -ml-4 py-1.5 px-4 text-gray-600 hover:text-gray-900"
            @click="$dispatch('hide-sidebar')"
          >
            {{ link.title }}
          </a>
        </li>
      @end
    </ul>
  </div>
</div>